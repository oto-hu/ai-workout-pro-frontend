# Firebase Configuration (Required for current setup)
# Get these values from your Firebase project console
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# AI Service API Keys (Required)
# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude models  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Development Environment (optional)
NODE_ENV=development

# Legacy configurations (for future migration consideration)
# Next.js Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Authentication (Next-Auth.js) - For future auth migration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth - For future auth migration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth - For future auth migration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Supabase Configuration - For future database migration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database (for production deployment)
DATABASE_URL=your_database_connection_string

# Vercel Environment Variables Setup Instructions:
# 1. Go to your Vercel dashboard
# 2. Select your project
# 3. Go to Settings > Environment Variables
# 4. Add each Firebase and AI API variable with your actual values
# 5. Make sure to add them for all environments (Development, Preview, Production)
#
# For Firebase:
# - Get these from Firebase Console > Project Settings > General tab
# - These are safe to be public (NEXT_PUBLIC_ prefix)
#
# For AI APIs:
# - Keep these secret (no NEXT_PUBLIC_ prefix)
# - These will only be available on the server side